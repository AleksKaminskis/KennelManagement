@page "/register"
@inject IAuthService AuthService
@inject CustomAuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation

<PageTitle>Register - Kennel Management</PageTitle>

<div class="row justify-content-center mt-5">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3>Register New Account</h3>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger" role="alert">
                        <strong>Error:</strong> @errorMessage
                    </div>
                }

                @if (!string.IsNullOrEmpty(successMessage))
                {
                    <div class="alert alert-success" role="alert">
                        <strong>Success:</strong> @successMessage
                    </div>
                }

                <EditForm Model="@registerModel" OnValidSubmit="@HandleRegister">
                    <DataAnnotationsValidator />
                    <ValidationSummary class="text-danger" />

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="firstName">First Name: <span class="text-danger">*</span></label>
                                <InputText id="firstName" class="form-control" @bind-Value="registerModel.FirstName" />
                                <ValidationMessage For="@(() => registerModel.FirstName)" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="lastName">Last Name: <span class="text-danger">*</span></label>
                                <InputText id="lastName" class="form-control" @bind-Value="registerModel.LastName" />
                                <ValidationMessage For="@(() => registerModel.LastName)" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label for="email">Email: <span class="text-danger">*</span></label>
                        <InputText id="email" type="email" class="form-control" @bind-Value="registerModel.Email" />
                        <ValidationMessage For="@(() => registerModel.Email)" />
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="password">Password: <span class="text-danger">*</span></label>
                                <InputText id="password" type="password" class="form-control" @bind-Value="registerModel.Password" />
                                <ValidationMessage For="@(() => registerModel.Password)" />
                                <small class="form-text text-muted">
                                    Minimum 6 characters, including uppercase, lowercase, number, and special character
                                </small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="confirmPassword">Confirm Password: <span class="text-danger">*</span></label>
                                <InputText id="confirmPassword" type="password" class="form-control" @bind-Value="registerModel.ConfirmPassword" />
                                <ValidationMessage For="@(() => registerModel.ConfirmPassword)" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label for="role">Account Type: <span class="text-danger">*</span></label>
                        <InputSelect id="role" class="form-control" @bind-Value="registerModel.Role" @onchange="OnRoleChanged">
                            <option value="Customer">Customer (Book kennels for my dogs)</option>
                            <option value="Staff">Staff (Manage daily operations)</option>
                            <option value="Admin">Administrator (Full system access)</option>
                        </InputSelect>
                        <ValidationMessage For="@(() => registerModel.Role)" />
                    </div>

                    @if (showCustomerFields)
                    {
                        <div class="card mb-3 bg-light">
                            <div class="card-body">
                                <h5 class="card-title">Additional Customer Information</h5>
                                <p class="text-muted small">This information will be used for booking management</p>

                                <div class="form-group mb-3">
                                    <label for="phoneNumber">Phone Number:</label>
                                    <InputText id="phoneNumber" class="form-control" @bind-Value="registerModel.PhoneNumber" placeholder="+353-1-234-5678" />
                                    <ValidationMessage For="@(() => registerModel.PhoneNumber)" />
                                </div>

                                <div class="form-group mb-3">
                                    <label for="address">Address:</label>
                                    <InputTextArea id="address" class="form-control" @bind-Value="registerModel.Address" rows="2" placeholder="Street address, City, Country" />
                                    <ValidationMessage For="@(() => registerModel.Address)" />
                                </div>
                            </div>
                        </div>
                    }

                    <button type="submit" class="btn btn-primary w-100" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                            <span>Creating Account...</span>
                        }
                        else
                        {
                            <span>Register</span>
                        }
                    </button>
                </EditForm>

                <hr class="my-4" />

                <div class="text-center">
                    <p>Already have an account? <a href="/login">Login here</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private RegisterModel registerModel = new() { Role = "Customer" };
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;
    private bool isLoading = false;
    private bool showCustomerFields = true;

    private void OnRoleChanged(ChangeEventArgs e)
    {
        var selectedRole = e.Value?.ToString() ?? "Customer";
        showCustomerFields = selectedRole.Equals("Customer", StringComparison.OrdinalIgnoreCase);

        // Clear customer-specific fields if not a customer
        if (!showCustomerFields)
        {
            registerModel.PhoneNumber = "";
            registerModel.Address = "";
        }
    }

    private async Task HandleRegister()
    {
        try
        {
            isLoading = true;
            errorMessage = string.Empty;
            successMessage = string.Empty;

            Console.WriteLine($"Attempting registration for: {registerModel.Email} as {registerModel.Role}");

            var result = await AuthService.RegisterAsync(registerModel);

            if (result != null)
            {
                successMessage = $"Registration successful! Welcome, {result.FirstName}! Redirecting to home...";
                Console.WriteLine($"Registration successful for: {registerModel.Email}");

                // AuthService now handles notifying the authentication state provider
                await Task.Delay(1500);
                Navigation.NavigateTo("/", forceLoad: false);
            }
            else
            {
                errorMessage = "Registration failed. The email address may already be in use, or the password doesn't meet requirements.";
                Console.WriteLine($"Registration failed for: {registerModel.Email}");
            }
        }
        catch (HttpRequestException ex)
        {
            errorMessage = $"Cannot connect to the server. Please ensure the API is running. Details: {ex.Message}";
            Console.WriteLine($"HTTP Error during registration: {ex.Message}");
        }
        catch (Exception ex)
        {
            errorMessage = $"An unexpected error occurred: {ex.Message}";
            Console.WriteLine($"Registration error: {ex.Message}");
            Console.WriteLine($"Stack: {ex.StackTrace}");
        }
        finally
        {
            isLoading = false;
        }
    }
}