@using Microsoft.AspNetCore.Authorization

@page "/"
@attribute [Authorize]

<PageTitle>Home - Kennel Management</PageTitle>

<h1>Welcome to Kennel Management System</h1>

<AuthorizeView>
    <Authorized>
        <div class="row mt-4">
            <div class="col-md-12">
                <div class="alert alert-info">
                    <h4>Welcome, @context.User.Identity?.Name!</h4>
                    <p>Use the navigation menu to manage customers, dogs, kennels, and bookings.</p>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card text-white bg-primary mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Customers</h5>
                        <p class="card-text">Manage customer information and records.</p>
                        <a href="/customers" class="btn btn-light">View Customers</a>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card text-white bg-success mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Dogs</h5>
                        <p class="card-text">Register and manage dog information.</p>
                        <a href="/dogs" class="btn btn-light">View Dogs</a>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card text-white bg-warning mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Kennels</h5>
                        <p class="card-text">Manage kennel facilities and availability.</p>
                        <a href="/kennels" class="btn btn-light">View Kennels</a>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card text-white bg-info mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Bookings</h5>
                        <p class="card-text">Handle booking reservations and schedules.</p>
                        <a href="/bookings" class="btn btn-light">View Bookings</a>
                    </div>
                </div>
            </div>
        </div>

        <AuthorizeView Roles="Admin">
            <div class="row mt-4">
                <div class="col-md-12">
                    <div class="alert alert-warning">
                        <strong>Admin Access:</strong> You have full access to all system features.
                    </div>
                </div>
            </div>
        </AuthorizeView>

        <AuthorizeView Roles="Staff">
            <div class="row mt-4">
                <div class="col-md-12">
                    <div class="alert alert-success">
                        <strong>Staff Access:</strong> You have operational access to manage daily operations.
                    </div>
                </div>
            </div>
        </AuthorizeView>

        <AuthorizeView Roles="Customer">
            <div class="row mt-4">
                <div class="col-md-12">
                    <div class="alert alert-info">
                        <strong>Customer Access:</strong> You have view-only access to the system.
                    </div>
                </div>
            </div>
        </AuthorizeView>
    </Authorized>
</AuthorizeView>