@using Microsoft.AspNetCore.Authorization

@page "/customers/edit/{id:int}"
@attribute [Authorize(Roles = "Admin,Staff")]
@inject ApiService ApiService
@inject NavigationManager Navigation

<PageTitle>Edit Customer - Kennel Management</PageTitle>

<h1>Edit Customer</h1>

@if (isLoadingCustomer)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (customerModel != null)
{
    <div class="row">
        <div class="col-md-8">
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger">@errorMessage</div>
            }

            <EditForm Model="@customerModel" OnValidSubmit="@HandleSubmit">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="form-group mb-3">
                    <label for="firstName">First Name:</label>
                    <InputText id="firstName" class="form-control" @bind-Value="customerModel.FirstName" />
                    <ValidationMessage For="@(() => customerModel.FirstName)" />
                </div>

                <div class="form-group mb-3">
                    <label for="lastName">Last Name:</label>
                    <InputText id="lastName" class="form-control" @bind-Value="customerModel.LastName" />
                    <ValidationMessage For="@(() => customerModel.LastName)" />
                </div>

                <div class="form-group mb-3">
                    <label for="email">Email:</label>
                    <InputText id="email" class="form-control" @bind-Value="customerModel.Email" />
                    <ValidationMessage For="@(() => customerModel.Email)" />
                </div>

                <div class="form-group mb-3">
                    <label for="phoneNumber">Phone Number:</label>
                    <InputText id="phoneNumber" class="form-control" @bind-Value="customerModel.PhoneNumber" />
                    <ValidationMessage For="@(() => customerModel.PhoneNumber)" />
                </div>

                <div class="form-group mb-3">
                    <label for="address">Address:</label>
                    <InputTextArea id="address" class="form-control" @bind-Value="customerModel.Address" rows="3" />
                    <ValidationMessage For="@(() => customerModel.Address)" />
                </div>

                <button type="submit" class="btn btn-primary" disabled="@isLoading">
                    @if (isLoading)
                    {
                        <span class="spinner-border spinner-border-sm me-2"></span>
                    }
                    Update Customer
                </button>
                <button type="button" class="btn btn-secondary" @onclick="Cancel">Cancel</button>
            </EditForm>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning">Customer not found.</div>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private CustomerFormModel? customerModel;
    private string errorMessage = string.Empty;
    private bool isLoading = false;
    private bool isLoadingCustomer = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadCustomer();
    }

    private async Task LoadCustomer()
    {
        try
        {
            isLoadingCustomer = true;
            var customer = await ApiService.GetCustomerAsync(Id);
            if (customer != null)
            {
                customerModel = new CustomerFormModel
                {
                    FirstName = customer.FirstName,
                    LastName = customer.LastName,
                    Email = customer.Email,
                    PhoneNumber = customer.PhoneNumber,
                    Address = customer.Address
                };
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading customer: {ex.Message}";
        }
        finally
        {
            isLoadingCustomer = false;
        }
    }

    private async Task HandleSubmit()
    {
        if (customerModel == null) return;

        try
        {
            isLoading = true;
            errorMessage = string.Empty;

            var success = await ApiService.UpdateCustomerAsync(Id, customerModel);
            if (success)
            {
                Navigation.NavigateTo("/customers");
            }
            else
            {
                errorMessage = "Failed to update customer.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error updating customer: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/customers");
    }
}