@using Microsoft.AspNetCore.Authorization

@page "/dogs"
@attribute [Authorize]
@inject ApiService ApiService
@inject NavigationManager Navigation

<PageTitle>Dogs - Kennel Management</PageTitle>

<h1>Dogs</h1>

@if (isLoading)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else
{
    <AuthorizeView Roles="Admin,Staff">
        <div class="mb-3">
            <button class="btn btn-primary" @onclick="NavigateToCreate">
                <span class="oi oi-plus"></span> Add New Dog
            </button>
        </div>
    </AuthorizeView>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">@errorMessage</div>
    }

    @if (dogs.Any())
    {
        <!-- Search box -->
        <div class="mb-3">
            <input class="form-control search-box"
                   placeholder="Search..."
                   @bind="searchTerm"
                   @bind:event="oninput" />
        </div>

        <!-- Delete confirmation modal -->
        @if (showDeleteConfirm)
        {
            <div class="modal-overlay">
                <div class="modal-content">
                    <p>Are you sure you want to delete this dog record?</p>
                    <div class="mt-3">
                        <button class="btn btn-danger me-2" @onclick="DeleteConfirmed">Yes, delete</button>
                        <button class="btn btn-secondary" @onclick="CancelDelete">Cancel</button>
                    </div>
                </div>
            </div>
        }

        <!-- Table -->
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Breed</th>
                        <th>Age</th>
                        <th>Color</th>
                        <th>Weight (kg)</th>
                        <th>Owner</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var dog in Filtered)
                    {
                        <tr>
                            <td>@dog.Name</td>
                            <td>@dog.Breed</td>
                            <td>@dog.Age years</td>
                            <td>@dog.Color</td>
                            <td>@dog.Weight kg</td>
                            <td>@dog.CustomerName</td>
                            <td>@dog.CreatedAt.ToShortDateString()</td>
                            <td>
                                <button class="btn btn-sm btn-primary" @onclick="() => NavigateToView(dog.Id)">
                                    <span class="oi oi-eye"></span> View
                                </button>
                                <AuthorizeView Roles="Admin,Staff">
                                    <button class="btn btn-sm btn-secondary" @onclick="() => NavigateToEdit(dog.Id)">
                                        <span class="oi oi-pencil"></span> Edit
                                    </button>
                                </AuthorizeView>
                                <AuthorizeView Roles="Admin">
                                    <button class="btn btn-sm btn-danger" @onclick="() => ConfirmDelete(dog.Id)">
                                        <span class="oi oi-trash"></span> Delete
                                    </button>
                                </AuthorizeView>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">No dogs found.</div>
    }
}

@code {
    private List<DogDto> dogs = new();
    private bool isLoading = true;
    private string errorMessage = string.Empty;

    // Add search term and search criteria

    protected string searchTerm = string.Empty;

    protected IEnumerable<DogDto> Filtered => string.IsNullOrWhiteSpace(searchTerm)
        ? dogs
        : dogs.Where(d => d.Name.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)
                        || d.Breed.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)
                        || d.Color.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)
                        || d.CustomerName.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)
                        || d.MedicalNotes.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)
        );


    protected override async Task OnInitializedAsync()
    {
        await LoadDogs();
    }

    private async Task LoadDogs()
    {
        try
        {
            isLoading = true;
            dogs = await ApiService.GetDogsAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading dogs: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void NavigateToCreate()
    {
        Navigation.NavigateTo("/dogs/create");
    }

    private void NavigateToView(int id)
    {
        Navigation.NavigateTo($"/dogs/view/{id}");
    }

    private void NavigateToEdit(int id)
    {
        Navigation.NavigateTo($"/dogs/edit/{id}");
    }

    protected bool showDeleteConfirm = false;
    protected int deleteId;

    protected void ConfirmDelete(int id)
    {
        deleteId = id;
        showDeleteConfirm = true;
        StateHasChanged();
    }

    // Delete Confirmed
    protected async Task DeleteConfirmed()
    {
        // Remove locally first for instant UI feedback
        var dogToDelete = dogs.FirstOrDefault(d => d.Id == deleteId);
        if (dogToDelete != null)
            dogs.Remove(dogToDelete);

        // Call service to remove from backend/in-memory store
        await DeleteDog(deleteId);

        // Hide modal and refresh UI
        showDeleteConfirm = false;
        StateHasChanged();
    }

    // Cancel delete
    protected void CancelDelete()
    {
        showDeleteConfirm = false;
        StateHasChanged();
    }

    private async Task DeleteDog(int id)
    {
        if (confirm($"Are you sure you want to delete this dog?"))
        {
            try
            {
                var success = await ApiService.DeleteDogAsync(id);
                if (success)
                {
                    await LoadDogs();
                }
                else
                {
                    errorMessage = "Failed to delete dog.";
                }
            }
            catch (Exception ex)
            {
                errorMessage = $"Error deleting dog: {ex.Message}";
            }
        }
    }

    private bool confirm(string message)
    {
        return true;
    }
}