@using Microsoft.AspNetCore.Authorization

@page "/bookings/view/{id:int}"
@attribute [Authorize]
@inject ApiService ApiService
@inject NavigationManager Navigation

<PageTitle>Booking Details - Kennel Management</PageTitle>

<h1>Booking Details</h1>

@if (isLoading)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (booking != null)
{
    <div class="card">
        <div class="card-header">
            <h3>Booking #@booking.Id</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Dog:</dt>
                <dd class="col-sm-9"><strong>@booking.DogName</strong></dd>

                <dt class="col-sm-3">Kennel:</dt>
                <dd class="col-sm-9"><strong>@booking.KennelNumber</strong></dd>

                <dt class="col-sm-3">Check-In Date:</dt>
                <dd class="col-sm-9">@booking.CheckInDate.ToString("D")</dd>

                <dt class="col-sm-3">Check-Out Date:</dt>
                <dd class="col-sm-9">@booking.CheckOutDate.ToString("D")</dd>

                <dt class="col-sm-3">Duration:</dt>
                <dd class="col-sm-9">@((booking.CheckOutDate - booking.CheckInDate).Days) day(s)</dd>

                <dt class="col-sm-3">Status:</dt>
                <dd class="col-sm-9">
                    @if (booking.Status == "Confirmed")
                    {
                        <span class="badge bg-success">@booking.Status</span>
                    }
                    else if (booking.Status == "Pending")
                    {
                        <span class="badge bg-warning">@booking.Status</span>
                    }
                    else if (booking.Status == "CheckedIn")
                    {
                        <span class="badge bg-info">Checked In</span>
                    }
                    else if (booking.Status == "CheckedOut")
                    {
                        <span class="badge bg-secondary">Checked Out</span>
                    }
                    else if (booking.Status == "Cancelled")
                    {
                        <span class="badge bg-danger">@booking.Status</span>
                    }
                    else
                    {
                        <span class="badge bg-light text-dark">@booking.Status</span>
                    }
                </dd>

                <dt class="col-sm-3">Total Cost:</dt>
                <dd class="col-sm-9"><strong class="text-primary">€@booking.TotalCost.ToString("F2")</strong></dd>

                <dt class="col-sm-3">Special Requirements:</dt>
                <dd class="col-sm-9">@(string.IsNullOrEmpty(booking.SpecialRequirements) ? "None" : booking.SpecialRequirements)</dd>

                <dt class="col-sm-3">Created:</dt>
                <dd class="col-sm-9">@booking.CreatedAt.ToString("F")</dd>
            </dl>

            <AuthorizeView Roles="Admin,Staff">
                <button class="btn btn-warning" @onclick="NavigateToEdit">
                    <span class="oi oi-pencil"></span> Edit
                </button>
            </AuthorizeView>
            <button class="btn btn-secondary" @onclick="GoBack">
                <span class="oi oi-arrow-left"></span> Back
            </button>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning">Booking not found.</div>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private BookingDto? booking;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadBooking();
    }

    private async Task LoadBooking()
    {
        try
        {
            isLoading = true;
            booking = await ApiService.GetBookingAsync(Id);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading booking: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void NavigateToEdit()
    {
        Navigation.NavigateTo($"/bookings/edit/{Id}");
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/bookings");
    }
}