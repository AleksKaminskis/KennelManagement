@using Microsoft.AspNetCore.Authorization

@page "/kennels"
@attribute [Authorize]
@inject ApiService ApiService
@inject NavigationManager Navigation

<PageTitle>Kennels - Kennel Management</PageTitle>

<h1>Kennels</h1>

@if (isLoading)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else
{
    <AuthorizeView Roles="Admin,Staff">
        <div class="mb-3">
            <button class="btn btn-primary" @onclick="NavigateToCreate">
                <span class="oi oi-plus"></span> Add New Kennel
            </button>
        </div>
    </AuthorizeView>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">@errorMessage</div>
    }

    @if (kennels.Any())
    {
        <!-- Search box -->
        <div class="mb-3">
            <input class="form-control search-box"
                   placeholder="Search by number or size..."
                   @bind="searchTerm"
                   @bind:event="oninput" />
        </div>

        <!-- Delete confirmation modal -->
        @if (showDeleteConfirm)
        {
            <div class="modal-overlay">
                <div class="modal-content">
                    <p>Are you sure you want to delete this kennel?</p>
                    <div class="mt-3">
                        <button class="btn btn-danger me-2" @onclick="DeleteConfirmed">Yes, delete</button>
                        <button class="btn btn-secondary" @onclick="CancelDelete">Cancel</button>
                    </div>
                </div>
            </div>
        }

        <!-- Table -->
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Kennel Number</th>
                        <th>Size</th>
                        <th>Status</th>
                        <th>Notes</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var kennel in Filtered)
                    {
                        <tr>
                            <td><strong>@kennel.KennelNumber</strong></td>
                            <td>@kennel.Size</td>
                            <td>
                                @if (kennel.IsOccupied)
                                {
                                    <span class="badge bg-danger">Occupied</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Available</span>
                                }
                            </td>
                            <td>@kennel.Notes</td>
                            <td>
                                <button class="btn btn-sm btn-primary" @onclick="() => NavigateToView(kennel.Id)">
                                    <span class="oi oi-eye"></span> View
                                </button>
                                <AuthorizeView Roles="Admin,Staff">
                                    <button class="btn btn-sm btn-secondary" @onclick="() => NavigateToEdit(kennel.Id)">
                                        <span class="oi oi-pencil"></span> Edit
                                    </button>
                                </AuthorizeView>
                                <AuthorizeView Roles="Admin">
                                    <button class="btn btn-sm btn-danger" @onclick="() => ConfirmDelete(kennel.Id)">
                                        <span class="oi oi-trash"></span> Delete
                                    </button>
                                </AuthorizeView>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="row mt-4">
            <div class="col-md-12">
                <h4>Kennel Availability Summary</h4>
                <p>Total Kennels: <strong>@kennels.Count</strong><br>
                    Available: <strong class="text-success">@kennels.Count(k => !k.IsOccupied)</strong><br>
                Occupied: <strong class="text-danger">@kennels.Count(k => k.IsOccupied)</strong></p>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">No kennels found.</div>
    }
}

@code {
    private List<KennelDto> kennels = new();
    private bool isLoading = true;
    private string errorMessage = string.Empty;
    protected string searchTerm = string.Empty;

    protected IEnumerable<KennelDto> Filtered => string.IsNullOrWhiteSpace(searchTerm)
        ? kennels
        : kennels.Where(k => k.KennelNumber.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)
                        || k.Size.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)
                        || k.DogName.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)
        );

    protected override async Task OnInitializedAsync()
    {
        await LoadKennels();
    }

    private async Task LoadKennels()
    {
        try
        {
            isLoading = true;
            kennels = await ApiService.GetKennelsAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading kennels: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void NavigateToCreate()
    {
        Navigation.NavigateTo("/kennels/create");
    }

    private void NavigateToView(int id)
    {
        Navigation.NavigateTo($"/kennels/view/{id}");
    }

    private void NavigateToEdit(int id)
    {
        Navigation.NavigateTo($"/kennels/edit/{id}");
    }


    protected bool showDeleteConfirm = false;
    protected int deleteId;

    protected void ConfirmDelete(int id)
    {
        deleteId = id;
        showDeleteConfirm = true;
        StateHasChanged();
    }

    // Delete Confirmed
    protected async Task DeleteConfirmed()
    {
        // Remove locally first for instant UI feedback
        var kennelToDelete = kennels.FirstOrDefault(k => k.Id == deleteId);
        if (kennelToDelete != null)
            kennels.Remove(kennelToDelete);

        // Call service to remove from backend/in-memory store
        await DeleteKennel(deleteId);

        // Hide modal and refresh UI
        showDeleteConfirm = false;
        StateHasChanged();
    }

    // Cancel delete
    protected void CancelDelete()
    {
        showDeleteConfirm = false;
        StateHasChanged();
    }

    private async Task DeleteKennel(int id)
    {
        if (confirm($"Are you sure you want to delete this kennel?"))
        {
            try
            {
                var success = await ApiService.DeleteKennelAsync(id);
                if (success)
                {
                    await LoadKennels();
                }
                else
                {
                    errorMessage = "Failed to delete kennel.";
                }
            }
            catch (Exception ex)
            {
                errorMessage = $"Error deleting kennel: {ex.Message}";
            }
        }
    }

    private bool confirm(string message)
    {
        return true;
    }
}