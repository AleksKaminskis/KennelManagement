@using Microsoft.AspNetCore.Authorization

@page "/customers"
@attribute [Authorize]
@inject ApiService ApiService
@inject NavigationManager Navigation

<PageTitle>Customers - Kennel Management</PageTitle>

<h1>Customers</h1>

@if (isLoading)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else
{
    <AuthorizeView Roles="Admin,Staff">
        <div class="mb-3">
            <button class="btn btn-primary" @onclick="NavigateToCreate">
                <span class="oi oi-plus"></span> Add New Customer
            </button>
        </div>
    </AuthorizeView>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">@errorMessage</div>
    }

    @if (customers.Any())
    {
        <!-- Search box -->
        <div class="mb-3">
            <input class="form-control search-box"
                   placeholder="Search..."
                   @bind="searchTerm"
                   @bind:event="oninput" />
        </div>

        <!-- Delete confirmation modal -->
        @if (showDeleteConfirm)
        {
            <div class="modal-overlay">
                <div class="modal-content">
                    <p>Are you sure you want to delete this customer record?</p>
                    <div class="mt-3">
                        <button class="btn btn-danger me-2" @onclick="DeleteConfirmed">Yes, delete</button>
                        <button class="btn btn-secondary" @onclick="CancelDelete">Cancel</button>
                    </div>
                </div>
            </div>
        }

        <!-- Table -->
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Address</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in Filtered)
                    {
                        <tr>
                            <td>@customer.FirstName @customer.LastName</td>
                            <td>@customer.Email</td>
                            <td>@customer.PhoneNumber</td>
                            <td>@customer.Address</td>
                            <td>@customer.CreatedAt.ToShortDateString()</td>
                            <td>
                                <button class="btn btn-sm btn-primary" @onclick="() => NavigateToView(customer.Id)">
                                    <span class="oi oi-eye"></span> View
                                </button>
                                <AuthorizeView Roles="Admin,Staff">
                                    <button class="btn btn-sm btn-secondary" @onclick="() => NavigateToEdit(customer.Id)">
                                        <span class="oi oi-pencil"></span> Edit
                                    </button>
                                </AuthorizeView>
                                <AuthorizeView Roles="Admin">
                                    <button class="btn btn-sm btn-danger" @onclick="() => ConfirmDelete(customer.Id)">
                                        <span class="oi oi-trash"></span> Delete
                                    </button>
                                </AuthorizeView>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">No customers found.</div>
    }
}

@code {
    private List<CustomerDto> customers = new();
    private bool isLoading = true;
    private string errorMessage = string.Empty;
    protected string searchTerm = string.Empty;

    protected IEnumerable<CustomerDto> Filtered => string.IsNullOrWhiteSpace(searchTerm)
        ? customers
        : customers.Where(c => c.FirstName.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)
                        || c.LastName.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)
                        || c.Email.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)
                        || c.PhoneNumber.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)
        );

    protected override async Task OnInitializedAsync()
    {
        await LoadCustomers();
    }

    private async Task LoadCustomers()
    {
        try
        {
            isLoading = true;
            customers = await ApiService.GetCustomersAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading customers: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void NavigateToCreate()
    {
        Navigation.NavigateTo("/customers/create");
    }

    private void NavigateToView(int id)
    {
        Navigation.NavigateTo($"/customers/view/{id}");
    }

    private void NavigateToEdit(int id)
    {
        Navigation.NavigateTo($"/customers/edit/{id}");
    }

    protected bool showDeleteConfirm = false;
    protected int deleteId;

    protected void ConfirmDelete(int id)
    {
        deleteId = id;
        showDeleteConfirm = true;
        StateHasChanged();
    }

    // Delete Confirmed
    protected async Task DeleteConfirmed()
    {
        // Remove locally first for instant UI feedback
        var customerToDelete = customers.FirstOrDefault(c => c.Id == deleteId);
        if (customerToDelete != null)
            customers.Remove(customerToDelete);

        // Call service to remove from backend/in-memory store
        await DeleteCustomer(deleteId);

        // Hide modal and refresh UI
        showDeleteConfirm = false;
        StateHasChanged();
    }

    // Cancel delete
    protected void CancelDelete()
    {
        showDeleteConfirm = false;
        StateHasChanged();
    }

    private async Task DeleteCustomer(int id)
    {
        if (confirm($"Are you sure you want to delete this customer?"))
        {
            try
            {
                var success = await ApiService.DeleteCustomerAsync(id);
                if (success)
                {
                    await LoadCustomers();
                }
                else
                {
                    errorMessage = "Failed to delete customer.";
                }
            }
            catch (Exception ex)
            {
                errorMessage = $"Error deleting customer: {ex.Message}";
            }
        }
    }

    private bool confirm(string message)
    {
        // In a real application, you would use JavaScript interop for confirmation
        return true;
    }
}