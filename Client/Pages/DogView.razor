@using Microsoft.AspNetCore.Authorization

@page "/dogs/view/{id:int}"
@attribute [Authorize]
@inject ApiService ApiService
@inject NavigationManager Navigation

<PageTitle>Dog Details - Kennel Management</PageTitle>

<h1>Dog Details</h1>

@if (isLoading)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (dog != null)
{
    <div class="card">
        <div class="card-header">
            <h3>@dog.Name</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Breed:</dt>
                <dd class="col-sm-9">@dog.Breed</dd>

                <dt class="col-sm-3">Age:</dt>
                <dd class="col-sm-9">@dog.Age years</dd>

                <dt class="col-sm-3">Color:</dt>
                <dd class="col-sm-9">@dog.Color</dd>

                <dt class="col-sm-3">Weight:</dt>
                <dd class="col-sm-9">@dog.Weight kg</dd>

                <dt class="col-sm-3">Owner:</dt>
                <dd class="col-sm-9">@dog.CustomerName</dd>

                <dt class="col-sm-3">Medical Notes:</dt>
                <dd class="col-sm-9">@(string.IsNullOrEmpty(dog.MedicalNotes) ? "None" : dog.MedicalNotes)</dd>

                <dt class="col-sm-3">Registered:</dt>
                <dd class="col-sm-9">@dog.CreatedAt.ToString("F")</dd>
            </dl>

            <AuthorizeView Roles="Admin,Staff">
                <button class="btn btn-warning" @onclick="NavigateToEdit">
                    <span class="oi oi-pencil"></span> Edit
                </button>
            </AuthorizeView>
            <button class="btn btn-secondary" @onclick="GoBack">
                <span class="oi oi-arrow-left"></span> Back
            </button>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning">Dog not found.</div>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private DogDto? dog;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadDog();
    }

    private async Task LoadDog()
    {
        try
        {
            isLoading = true;
            dog = await ApiService.GetDogAsync(Id);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading dog: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void NavigateToEdit()
    {
        Navigation.NavigateTo($"/dogs/edit/{Id}");
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/dogs");
    }
}